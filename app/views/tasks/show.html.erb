<h1>View task</h1>
<%= link_to 'Back to Task List', tasks_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Status</th>
      <th>Description</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @task.title %> (Priority: <%= @task.priority %>)</td>
      <td><%= @task.start_time %></td>
      <td><%= @task.end_time %></td>
      <td><%= @task.status %></td>
      <td><%= @task.description %></td>
      <td>
        <%= link_to 'Edit', edit_task_path(id: @task.id) %>
        <%= delete_link_to 'Delete', task_path(id: @task.id) %>
      </td>
    </tr>
  </tbody>
</table>